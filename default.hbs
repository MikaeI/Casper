                <li class="nav-item">
                  <a data-selected="false" href="javascript:window.doClick=true;history.pushState(null, null, '/?page=index');window.switch();" class="nav-link hadland-tab hadland-tab-index hadland-tab-hide">Hjem</a>
                </li>
                <li class="nav-item">
                  <a data-selected="false" href="javascript:window.doClick=true;history.pushState(null, null, '/?page=activities');window.switch();" class="nav-link hadland-tab hadland-tab-activities">Aktiviteter</a>
                </li>
                <li class="nav-item">
                  <a data-selected="false" href="javascript:window.doClick=true;history.pushState(null, null, '/?page=store');window.switch();" class="nav-link hadland-tab hadland-tab-store">Butikk</a>
                </li>
                <li class="nav-item">
                  <a data-selected="false" href="javascript:window.doClick=true;history.pushState(null, null, '/?page=csa');window.switch();" class="nav-link hadland-tab hadland-tab-csa">Andelslandbruk</a>
                </li>
                <li class="nav-item">
                  <a data-selected="false" href="javascript:window.doClick=true;history.pushState(null, null, '/?page=about');window.switch();" class="nav-link hadland-tab hadland-tab-about">Om</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </nav>
    </div>
    {{{body}}}
