    <script type="text/javascript" src="/ghost/assets/js/svg-injector.umd.production.js"></script>
    <script type="text/javascript" src="/ghost/assets/js/twitterFetcher_min.js"></script>
    <script type="text/javascript" src="/ghost/assets/js/typed.min.js"></script>
    <script type="text/javascript" src="/ghost/assets/js/theme.js"></script>
    <script type="text/javascript">
      window.addEventListener('load', function () {
        document.querySelector('body').classList.add('loaded');
      });
    </script>
    <script>
      var images = document.querySelectorAll('.kg-gallery-image img');
      images.forEach(function (image) {
        var container = image.closest('.kg-gallery-image');
        var width = image.attributes.width.value;
        var height = image.attributes.height.value;
        var ratio = width / height;
        container.style.flex = ratio + ' 1 0%';
      })
      function getUrlParameter(name) {
        name = name.replace(/[\[]/, '\\[').replace(/[\]]/, '\\]');
        var regex = new RegExp('[\\?&]' + name + '=([^&#]*)');
        var results = regex.exec(location.search);
        return results === null ? '' : decodeURIComponent(results[1].replace(/\+/g, ' '));
      };
      window.switch = function() {
        if (window.isSubPage) {
          location.reload();
        } else {
          document.querySelector('body').setAttribute('data-context', getUrlParameter('page') || 'index');
          document.querySelectorAll('[data-selected]').forEach(function(item) {
            item.setAttribute('data-selected', 'false');
          });
          document.querySelectorAll('.hadland-tab-' + (getUrlParameter('page') || 'index')).forEach(function(item) {
            item.setAttribute('data-selected', 'true');
          });
          if ($('.navbar-toggler')[0].offsetParent !== null && window.doClick) {
            document.querySelector('.navbar-toggler').click();
          }
          window.scrollTo(0, 0);
        }
      }
      window.onpopstate = function() {
        window.switch();
      }
      function ready(fn) {
        if (document.readyState != 'loading'){
          fn();
        } else {
          document.addEventListener('DOMContentLoaded', fn);
        }
      }
      if (!window.isSubPage) {
        ready(window.switch);
      }
    </script>
    <script type="text/javascript" src="{{asset "built/jquery.fitvids.js"}}"></script>
  </body>
</html>
