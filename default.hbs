    <script type="text/javascript" src="/ghost/assets/js/popper.min.js"></script>
    <script type="text/javascript" src="/ghost/assets/js/bootstrap.js"></script>
    <script type="text/javascript" src="/ghost/assets/js/aos.js"></script>
    <script type="text/javascript" src="/ghost/assets/js/clipboard.js"></script>
