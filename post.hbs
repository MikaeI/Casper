{{!< default}}
{{#post}}
  <script>
    window.isSubPage = true;
  </script>
  <section class="bg-secondary text-light overlay pb-4" style="margin-top: -1px;" data-overlay>
    {{#if feature_image}}
      <img
        class="bg-image"
        style="mix-blend-mode: overlay;"
        srcset="{{img_url feature_image size="s"}} 300w,
                {{img_url feature_image size="m"}} 600w,
                {{img_url feature_image size="l"}} 1000w,
                {{img_url feature_image size="xl"}} 2000w"
        sizes="(max-width: 800px) 400px,
                (max-width: 1170px) 700px,
                1400px"
        src="{{img_url feature_image size="xl"}}"
        alt="{{title}}"
      />
    {{/if}}
    <div class="container pt-7">
      <div class="row">
        <h1 class="px-3 display-4" style="font-weight: 900;">{{title}}</h1>
      </div>
    </div>
  </section>
  <section class="text-dark hadland-main bg-light pt-6 pb-3">
    <div class="container pb-0">
      <div class="row col-md-8 px-2 m-0"></default>
        {{content}}
      </div>
    </div>
  </section>
{{/post}}
